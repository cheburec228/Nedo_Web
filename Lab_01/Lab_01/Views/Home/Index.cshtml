@model Lab_01.Models.FormData

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Index</title>
    <!-- Add the Bootstrap CSS link -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: @(Model?.BackgroundColor ?? "default-color");
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        @using (Html.BeginForm("Index", "Home", FormMethod.Post, new { @class = "mb-3" }))
        {
            <label class="form-label">FORM:</label>
            <textarea class="form-control" name="FormContent" placeholder="Вміст абзаців">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Maecenas convallis ipsum orci, feugiat accumsan neque ullamcorper nec. Suspendisse a arcu vitae massa dictum fermentum</textarea>
            <input class="form-control" name="FormTextParameters" placeholder="Текстові параметри" / value="color: blue; font-size: 25px;">
            <button type="submit" class="btn btn-primary mt-3">Submit</button>
        }
    </div>

    <!-- Add the Bootstrap JS and Popper.js scripts (order matters) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
