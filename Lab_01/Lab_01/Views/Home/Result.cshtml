@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Result</title>
    <!-- Add the Bootstrap CSS link -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-size: 14px;
            color: #333;
            text-align: left;
            margin-bottom: 20px;
        }

        .result-section {
            font-size: 16px;
            color: #555;
            text-align: center;
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <div class="mb-4">
            <strong>Текст:</strong> @TempData["FormContent"]
        </div>
        <div class="mb-4">
            <strong>Тектові параметри:</strong> @TempData["FormTextParameters"]
        </div>
        <div class="mb-4">
            <strong>Фонові параметри (БД):</strong> @TempData["BackgroundColor"]
        </div>
        <div class="mb-4">
            <strong>Розміри та відступи (БД):</strong> @TempData["SpaceWord"]
        </div>
        <div class="result-section">
            <p>This is the Result Page</p>
        </div>
        <div class="result border rounded p-5" style="@TempData["BackgroundColor"]">
            <h1 style="@TempData["SpaceWord"]; @TempData["FormTextParameters"]">@TempData["FormContent"]</h1>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
