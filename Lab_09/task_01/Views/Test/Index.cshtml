@model List<TestQuestion>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Тест</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container">
        <h1>Тест по математике</h1>
        <form action="@Url.Action("SubmitTest")" method="post">
            @foreach (var question in Model)
            {
                <div class="card mb-3">
                    <div class="card-body">
                        <h5 class="card-title">@question.Text</h5>
                        @if (question.Type == QuestionType.SingleChoice)
                        {
                            foreach (var option in question.Options)
                            {
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="question-@Model.IndexOf(question)" id="option-@Model.IndexOf(question)-@Model.IndexOf(option)" value="@option.Text">
                                    <label class="form-check-label" for="option-@Model.IndexOf(question)-@Model.IndexOf(option)">@option.Text</label>
                                </div>
                            }
                        }
                        else if (question.Type == QuestionType.MultipleChoice)
                        {
                            foreach (var option in question.Options)
                            {
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" name="question-@Model.IndexOf(question)[]" id="option-@Model.IndexOf(question)-@Model.IndexOf(option)" value="@option.Text">
                                    <label class="form-check-label" for="option-@Model.IndexOf(question)-@Model.IndexOf(option)">@option.Text</label>
                                </div>
                            }
                        }
                        else if (question.Type == QuestionType.Text)
                        {
                            <div class="form-floating">
                                <textarea class="form-control" name="question-@Model.IndexOf(question)" id="question-@Model.IndexOf(question)" style="height: 100px;"></textarea>
                                <label for="question-@Model.IndexOf(question)">Ответ</label>
                            </div>
                        }
                    </div>
                </div>
            }
            <button type="submit" class="btn btn-primary">Завершить тест</button>
        </form>
    </div>
</body>
</html>
