@model UserProfileViewModel

@{
    ViewBag.Title = "Profile";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container">
        <h1>Profile</h1>
        <div>
            <p><strong>Name:</strong> @Model.User.Name</p>
            <p><strong>Email:</strong> @Model.User.Email</p>
            <p><strong>Birth Date:</strong> @Model.User.BirthYear / @Model.User.BirthMonth / @Model.User.BirthDay</p>
        </div>
        <div>
            <p><strong>Test Attempts:</strong></p>
            <ul>
                @foreach (var attempt in Model.TestAttempts)
                {
                    <li>Attempt @attempt.AttemptNumber: Result - @attempt.Result</li>
                }
            </ul>
        </div>

        <a href="@Url.Action("EditProfile", "Account", new { userEmail = Model.User.Email })" class="btn btn-link text-primary">Edit</a>

        <!-- Button for composing a new message -->
        <a href="@Url.Action("Compose", "Account", new { userEmail = Model.User.Email })" class="btn btn-primary">Compose Message</a>

        <!-- Button for viewing messages -->
        <a href="@Url.Action("Inbox", "Account", new { userEmail = Model.User.Email })" class="btn btn-secondary">View Messages</a>

        <a href="@Url.Action("Index", "Test")" class="btn btn-success">Start Test</a>
    </div>
</body>
</html>
