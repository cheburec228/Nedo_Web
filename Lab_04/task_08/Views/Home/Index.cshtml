@using task_08.Models

@model IEnumerable<Employee>
@{
    ViewBag.Title = "Home Page";
}

<h2>Employees</h2>

<form method="post">
    <div class="form-group">
        <label for="deptFilter">Filter by Department:</label>
        <select class="form-control" id="deptFilter" name="deptFilter">
            <option value="">All Departments</option>
            <option value="IT">IT</option>
            <option value="HR">HR</option>
            <option value="Finance">Finance</option>
            <option value="Marketing">Marketing</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Filter</button>
</form>

@if (Model != null && Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Salary</th>
                    <th>Age</th>
                    <th>Gender</th>
                    <th>Department</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var employee in Model)
                {
                    <tr>
                        <td>@employee.E_Name</td>
                        <td>@employee.E_Salary</td>
                        <td>@employee.E_Age</td>
                        <td>@employee.E_Gender</td>
                        <td>@employee.E_Dept</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <p>No employees found.</p>
}
