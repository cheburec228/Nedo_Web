@{
    ViewBag.Title = "Home Page";
}
<style>
    .container {
        width: 500px;
        margin: 50px auto;
        text-align: center;
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
    }

    .rectangle {
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        position: relative;
        width: 500px;
        height: 250px;
        background-color: lightblue;
        margin-bottom: 20px;
        border: 2px solid black;
    }

    .button {
        display: inline-block;
        padding: 10px 20px;
        margin: 10px 10px;
        background-color: #4CAF50;
        color: white;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

    .input {
        margin-bottom: 10px;
    }
</style>
<div class="container">
    <div class="rectangle">
        <label>Радіус кулі:</label>
        <input type="number" id="radius" min="0">
    </div>
    <select id="calculationType">
        <option value="volume">Об'єм кулі</option>
        <option value="surfaceArea">Площа сфери</option>
    </select>
    <div id="result"></div>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

<script>
    $("#calculationType").change(function () {
        var radius = $("#radius").val();
        if (!isValid(radius)) {
            $("#result").text("Некоректні дані");
            return;
        }

        var selectedOption = $(this).val();
        var methodName = selectedOption.charAt(0).toUpperCase() + selectedOption.slice(1);
        $.post("/Home/Calculate" + methodName, { radius: radius }, function (data) {
            $("#result").text(selectedOption === "volume" ? "Об'єм: " + data.result : "Площа поверхні: " + data.result);
        });
    });

    function isValid(value) {
        return !isNaN(value) && parseFloat(value) >= 0;
    }
</script>




